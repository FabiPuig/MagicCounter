<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a20464654j.magiccounter.MainActivity">

    <Button
        android:text="Veneno+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVenMasPone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="Veneno+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVenMasPtwo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnHpMasPtwo"
        app:layout_constraintLeft_toLeftOf="@+id/btnHpMasPtwo" />

    <Button
        android:text="Veneno-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVenMenPone"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/btnVenMasPone" />

    <Button
        android:text="Veneno-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVenMenPtwo"
        app:layout_constraintRight_toRightOf="@+id/btnHpMenPtwo"
        app:layout_constraintBottom_toBottomOf="@+id/btnVenMasPtwo"
        app:layout_constraintLeft_toLeftOf="@+id/btnHpMenPtwo" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="288dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5088063" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/heart_icon"
        android:id="@+id/btnHpMasPone"
        app:layout_constraintTop_toBottomOf="@+id/btnVenMasPone"
        app:layout_constraintLeft_toLeftOf="@+id/btnVenMasPone"
        app:layout_constraintRight_toRightOf="@+id/btnVenMasPone"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintBottom_toTopOf="@+id/btnRoboHpPone"
        android:scaleType="centerInside" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/heart"
        android:id="@+id/btnHpMasPtwo"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/btnVenMasPtwo"
        app:layout_constraintRight_toRightOf="@+id/btnHpMasPone"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.69"
        app:layout_constraintLeft_toLeftOf="@+id/btnRoboHpPtwo"
        app:layout_constraintTop_toBottomOf="@+id/btnRoboHpPtwo" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/heart_hollow"
        android:id="@+id/btnHpMenPone"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/btnRoboHpPone"
        app:layout_constraintTop_toBottomOf="@+id/btnVenMenPone"
        app:layout_constraintRight_toRightOf="@+id/btnVenMenPone"
        app:layout_constraintLeft_toLeftOf="@+id/btnVenMenPone" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/heart_hollow"
        android:id="@+id/btnHpMenPtwo"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="@+id/btnRoboHpPtwo"
        app:layout_constraintTop_toBottomOf="@+id/btnRoboHpPtwo"
        app:layout_constraintLeft_toLeftOf="@+id/btnHpMenPone"
        app:layout_constraintBottom_toTopOf="@+id/btnVenMenPtwo" />

    <ImageButton
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/btnRoboHpPone"
        app:layout_constraintRight_toRightOf="@+id/btnHpMenPone"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="@+id/btnHpMasPone"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <ImageButton
        android:layout_width="0dp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:id="@+id/btnRoboHpPtwo"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="@+id/btnRoboHpPone"
        app:layout_constraintRight_toRightOf="@+id/btnRoboHpPone"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="50dp" />

    <TextView
        android:text="20/0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRoboHpPone"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnHpMasPone"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btnHpMenPone"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="20/0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPtwo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRoboHpPtwo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/btnHpMenPtwo"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnHpMasPtwo"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
